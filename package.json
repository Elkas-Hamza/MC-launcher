{
  "name": "mclauncher",
  "version": "2.1.1",
  "description": "Minecraft launcher",
  "main": "app/main.js",
  "author": "Elkas-hamza",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.elkas.minecraft.launcher",
    "productName": "MClauncher",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/favicon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "signAndEditExecutable": false,
      "publisherName": "Elkas-hamza"
    },
    "linux": {
      "target": "AppImage",
      "category": "Game",
      "artifactName": "${productName}-${version}-linux.${ext}",
      "icon": "build/icon.png",
      "desktop": {
        "Name": "MClauncher",
        "Comment": "Minecraft Launcher",
        "StartupWMClass": "MClauncher"
      }
    },
    "nsis": {
      "installerIcon": "build/favicon.ico",
      "uninstallerIcon": "build/favicon.ico",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "dotenv": "^17.2.3",
    "lzma": "^2.3.2"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  }
}
